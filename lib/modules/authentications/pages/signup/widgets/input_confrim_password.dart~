import 'package:flutter/material.dart';
import 'package:flutter_bloc/flutter_bloc.dart';

import '../../../../../ui/input/input_field.dart';
import '../../../cubit/signup/signup_cubit.dart';

class InputConfirmPassword extends StatelessWidget {
  const InputConfirmPassword({
    super.key,
    required this.confirmPasswordFocusNode,
  });

  final FocusNode confirmPasswordFocusNode;

  @override
  Widget build(BuildContext context) {
    return BlocBuilder<SignUpCubit, SignUpState>(
        buildWhen: (previous, next) =>
            previous.confirmPassword != next.confirmPassword ||
            previous.hideConfirmPassword != next.hideConfirmPassword,
        builder: (context, state) {
          return InputField(
            label: "Confirm Password",
            focusNode: confirmPasswordFocusNode,
            suffixIcon: IconButton(
              icon: Icon(state.hideConfirmPassword
                  ? Icons.visibility_off_outlined
                  : Icons.visibility),
              onPressed: () {
                context
                    .read<SignUpCubit>()
                    .onConfirmPasswordVisibilityChanged();
              },
            ),
            validator: (value) {
              if (value == null || value.isEmpty) {
                return 'Please enter your confirm password';
              } else if (value != state.password) {
                print(value);
                print(state.password);
                return 'Password does not match';
              }
              return null;
            },
            onChange: (value) =>
                context.read<SignUpCubit>().onConfirmPasswordChanged(value),
            borderRadius: 20.0,
            borderColor: Colors.black,
            boxConstraints: 12,
            verticalPadding: 17.0,
            fieldTitle: "Confirm Password",
            hintColor: Colors.grey.shade600,
            obscureText: state.hideConfirmPassword ? true : false,
            titleSize: 15.0,
          );
        });
  }
}
